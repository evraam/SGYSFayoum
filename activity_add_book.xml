<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrew.goodreads.AddBook">


    <ImageButton
        android:id="@+id/imageSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/common_full_open_on_phone"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/add_btn"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/bookName"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:hint="book name ....."
        android:textAlignment="textStart"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="248dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageSelect"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@+id/bookDescription"
        android:layout_alignStart="@+id/bookDescription" />

    <EditText
        android:id="@+id/bookDescription"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="book description ....."
        android:inputType="textMultiLine"
        android:padding="25dp"
        android:layout_margin="20dp"
        android:textAlignment="textStart"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="320dp"
        android:layout_below="@+id/bookName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="submit book"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteY="463dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
